//Assignment_4 Task_2
public class Student{
  
  public int id;
  public double cgpa=0.0;
  public String []course;
  public int count =0;
  public Student(int id){
    this.id=id;
    System.out.printf("A student with ID %d has been created.\n",id);
  }
  
  public void storeCG(double cg){
    cgpa=cg;
    if(cgpa<3){
      course = new String[3];
    }
    else{
      course =new String[4]; 
    }
  }
  
  public void addCourse(String co){
    if (cgpa==0.0){
      System.out.printf("Failed to add %s \nSet CG first\n",co);
      return;
// why return???
    }
    if (cgpa<3.0){
      if(count==3)
      {
        System.out.println("CG is low. Can't add more than 3 courses.");
      }
      else{
        course[count++]=co;
      }
    }
    else{
      course[count++]=co;
    }
  }
  public void showAdvisee(){
    System.out.printf("Student ID: %d, CGPA: %.1f \n",id,cgpa);
    if(count!=0){
      System.out.println("Added courses are:");
      for(int a=0; a<count; a++)
      {
        System.out.print(course[a]+" ");
      }
      System.out.println();
    }
    else{
      System.out.println("No courses added.");
    }
  }
  
  public void addCourse(String[] arrCourse){
    if (cgpa == 0.0) {
        System.out.println("Set CG first before adding courses.");
        return;
    }
    for (int i = 0; i < arrCourse.length; i++) {
        if (count >= course.length) {
            System.out.printf("Failed to add %s\n", arrCourse[i]);
            if (cgpa < 3.0){
                System.out.println("CG is low. Can't add more than 3 courses.");
            }
            else{
                System.out.println("Maximum 4 courses allowed.");
            break;
            }
        }
        course[count++] = arrCourse[i];
    }
       
      }
  public void removeAllCourse(){
    for(int rCount=0; rCount<count; rCount++){
      course[rCount]=null;
    }
    count=0;
    
  }
  public void storeID(int id){
    this.id=id;
  }
  public Student(int id, double cg){
    this.id=id;
    cgpa=cg;
    storeCG(cg);
    System.out.printf("A student with ID %d and cgpa %.1f has been created.",id,cgpa);
    System.out.println();
  }
  } 
