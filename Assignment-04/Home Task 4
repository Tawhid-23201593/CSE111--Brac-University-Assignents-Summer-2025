// Assignment-4 Task-4
public class Player{
  public String name;
  public int age;
  public int matches;
  
  public Player(String name, int age, int matches){
    this.name=name;
    this.age=age;
    this.matches=matches;
  }
  
}
public class Team{
  public String teamName;
  public Player[]info=new Player[3];
  public int count;
  
  public Team(){
   
  }
  public Team(String nm){
    teamName=nm;
  }
  public void updateName(String name){
    teamName=name; 
  }
  
  public void addPlayer(Player neww){
   info[count++]=neww;
  }
  
  public void printDetail(){
    System.out.println("Team: "+teamName);
    System.out.println("List of players: ");
    for(int counts=0; counts<count; counts++){
      System.out.printf("Name: %s \nAge: %d, Total Matches: %d\n",info[counts].name,info[counts].age,info[counts].matches);
    }
  }
  
}
