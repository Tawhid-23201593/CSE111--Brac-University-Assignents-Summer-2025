//home task 3

public class Department{
  int studentCount;
  String name;
  Student []list =new Student[5];
  
  public Department(String name){
    this.name= name;
  }
  
 public void addStudent(Student saddam){
     boolean flag= true;
    for(int count=0; count<studentCount; count++){
      if(list[count].getId()==saddam.getId()){
        System.out.println("Student with the same ID already exists, Please try with another ID");
        flag=false;
        break;
      }
    }
    if(flag){
      list[studentCount++]=saddam;
      System.out.println("Welcome to CSE department, "+saddam.getName());
    }
  }
  public void  findStudent(int a){
    boolean flag= true;
    for(int count=0; count<studentCount; count++){
      if(list[count].getId()==a){
        list[count].detFind();
        flag = false;
        break;
      }
    }
    if(flag){
      System.out.println("Student with this ID doesn't exist, Please give a valid ID");
    }
  }
 public void addStudent(Student a, Student b, Student c){
    addStudent(a);
    addStudent(b);
    addStudent(c);
  }
  public void details(){
    System.out.println("Department Name: "+name);
    System.out.println("Number of the students: "+ studentCount);
    System.out.println("Details of the students: ");
    for(int start= 0; start<studentCount; start++){
      list[start].det();
    }
  }
}
public class Student{
  private String name;
  private int id;
  private double cgpa; 
  
  public Student(String nm, int iD, double cg){
    name=nm;
    id=iD;
    cgpa=cg;
  }
  
  public void setId(int a){
    id=a;
  }
  public int getId(){
    return id;
  }
  public String getName(){
    return name;
  }
 
  public void det(){
    System.out.printf("Student name: %s, ID: %d, cgpa: %.2f\n",name,id,cgpa);
  }
  public void detFind(){
    System.out.println("Student info:");
    System.out.printf("Student name: %s \nID: %d \nCGPA: %.2f\n",name,id,cgpa);
  }
}
