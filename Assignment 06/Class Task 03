// ass 6 class task 3 part 1
public class Student{
  String name;
  String email;
  int id;
  String dept;
  private String password;
  private boolean login = false;
  String []course = new String[3];
  
  public void AdviseeInfo(){
   System.out.print("Name: "+name);
   System.out.println(" ID: "+id);
   System.out.println("Department: "+dept);
   System.out.println("Advised Courses:");
   for(int count=0; count<course.length; count++){
     System.out.print(course[count]);
     if(count<course.length-1){
       System.out.print(" ");
     }
     else{
      System.out.println();
      System.out.println("==============");
     }
   }
  }
  public void setPassword(String pass){
    password=pass;
  }
  public String getPassword(){
    return password;
  }
  public void setlogin(boolean status){
    login=status;
  }
  public boolean getlogin(){
    return login;
  }
  public Student(String name, int id, String dept){
    this.name=name;
    this.id=id;
    this.dept=dept;
    System.out.println("Student object is created");
  }
}

// ass 6 class task 3 part 2
public class Connect{
  public Student []students= new Student[5];
  int totalAdvisee=0;
  
  public Connect(){
    System.out.println("Connect is ready to use!");
  }
  public void login(Student saddam){
    if (saddam.email == null || saddam.getPassword() == null) {
        System.out.println("Email and password need to be set.");
      } 
   else{
       saddam.setlogin(true);
       System.out.println("Login successful");
      }
        }
  public void advising(Student saddam){
    boolean flag= saddam.getlogin();
    if(flag){
      System.out.println("You haven't selected any courses.");
    }
    else{
      System.out.println("Please login to advise courses!");
    }
  }
  public void advising(Student saddam, String a, String b, String c, String d){
   System.out.println("You need special approval to take more than 3 courses.");
  }
  public void advising(Student saddam, String a, String b, String c){
    if(saddam.getlogin() && totalAdvisee<5){
      saddam.course[0]=a;
      saddam.course[1]=b;
      saddam.course[2]=c;
      System.out.println("Advising successful!");
      students[totalAdvisee]=saddam;
      totalAdvisee++;
    }
  }
  public void allAdviseeInfo(){
    System.out.println("Total Advisee: "+totalAdvisee);
    for(int count=0; count<totalAdvisee; count++){
      students[count].AdviseeInfo();
    }
    }
  
  
}
