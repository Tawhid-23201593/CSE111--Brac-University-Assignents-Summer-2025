//Assignment 6 Task 2
public class Book{
  public static int total_books_sold=0;
  public static double total_revenue=0.0;
  public String title;
  public double priceAfterDiscount=0;
  public Book(String nm, int per){
    title=nm;
    total_books_sold++;
    priceAfterDiscount=150-(discountPrice(per));
    total_revenue+=priceAfterDiscount;
  }
  public void bookDetails(){
    System.out.println("Title: "+title);
    System.out.println("Price after Discount: "+priceAfterDiscount); 
  }
  public double discountPrice(int percentage){
  double cal=(150*(percentage/100.0));
  return cal;
}
}
