//ungraded Task-5 ASS-3

public class Movie{
  public String title;
  public String director;
  public String []actors= new String[4];
  public double rating;
  public int count=0;
  
  public void setMovieDetails(String a, String b, double c){
    title=a;
    director=b;
    rating=c;
  }
  public void setMovieDetails(String a, String b){
    title=a;
    director=b;
  }
  
  public void addActors(String nm){
    if (count<actors.length){
       actors[count++]=nm;
       System.out.printf("Added actor \"%s\" to \"%s\".\n",nm,title);
    }
  }
  public void addActors(String a, String b){
    addActors(a);
    addActors(b);
  }
  public void addActors(String a, String b, String c){
    addActors(a);
    addActors(b);
    addActors(c);
  }
  public void updateRating(double a){
    rating = a;
    System.out.printf("Updated rating of \"%s\" to %f \n",title,a);
  }
  public void showInfo(){
    System.out.println("Title: "+title);
    System.out.println("Director: "+director);
    System.out.println("Rating: "+rating);
    System.out.print("Actors: ");
    for(int a=0; a<count; a++){
        System.out.print(actors[a]);
        if(a<count-1){
        System.out.print(", ");
        }
        else{
          System.out.println();
        }
    }
    
  }
}
