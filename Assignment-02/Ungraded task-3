// Ungraded task-3 ASS-2
public class ChickenBurger{
  public String bun="Sesame";
  public int price=200;
  public String sauceOption="Less";
  public String spiceLevel="Not set";
  public String []sp=  {"Mild","Spicy","Naga","Extreme"};
  
  public void customizeSpiceLevel(String nm){
    boolean flag = false;
    for(int a=0; a<sp.length;a++){
      if (sp[a]==nm){
        spiceLevel=sp[a];
        flag=true;
        break;
      }
    }
    if (flag){
      System.out.println("Spice level set to "+nm);
    }
    else{
      System.out.println("This spice level is unavailable.");
    }
  }
  
  public String serveBurger(){
    String re ="";
    if(spiceLevel=="Not set"){
      re="Cannot serve now. Customize Spice Level first.";
    }
    else{
      re= ("The burger is being served:-\n"+"Bun Type: "+bun+"\n"+"Price: "+price+"\n"+"Sauce Option: "+sauceOption+"\n"+"Spice Level: "+spiceLevel);
    }
    return re;
  }
}
